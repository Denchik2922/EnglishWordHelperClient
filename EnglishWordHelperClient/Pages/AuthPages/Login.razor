@page "/login"


<div class="row justify-content-md-center">
    <div class="col-md-7 col-sm-12">
    <div class="col">
        <EditForm Model="_loginModel" OnValidSubmit="LoginUser" class="card card-body bg-light">
            <DataAnnotationsValidator />
            <div class="form-group row">
                <div class="col-sm-12">
                    <label for="Username" class="form-label">Email</label>
                    <InputText id="name" class="form-control" @bind-Value="_loginModel.Email" />
                    <ValidationMessage For="@(() => _loginModel.Email)" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <label for="Username" class="form-label">Password</label>
                    <InputText Id="password" type="password" Class="form-control" @bind-Value="_loginModel.Password" />
                    <ValidationMessage For="@(() => _loginModel.Password)" />
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-3">
                    <button style="width:100%;min-width:fit-content;" class="btn btn-primary" type="submit">Login</button>
                </div>
              </div>
        </EditForm>
    </div>
    </div>
</div>
